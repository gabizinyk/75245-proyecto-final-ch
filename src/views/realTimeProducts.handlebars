<h2>Products - In Realtime</h2>
<br>
<p>Agregue un producto:</p>
<form
  action="/api/products"
  method="post"
  id="createProductForm"
>
  <label for="text">Titulo:</label>
  <input type="text" name="title" id="title" required/>

  <label for="description">Descripción:</label>
  <input type="text" name="description" id="description" required/>

  <label for="code">Código:</label>
  <input type="number" name="code" id="code" requiredd/>

  <label for="price">Precio:</label>
  <input type="number" name="price" id="price" required/>

  <select id="status" name="status" required>
    <option value="true">Disponible</option>
    <option value="false">No Disponible</option>
  </select>

  <label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock" required/>  

  <label for="category">Categoria:</label>
  <input type="text" name="category" id="category" required/>

  <label for="thumbnailsPath">Imágenes:</label>
  <input type="text" name="thumbnailsPath" id="thumbnailsPath" required/>
  
  <input type="submit" value="Crear">
</form>
<br>

<h4>Listado de productos</h4>
{{#each products}}
  <ul class="product">
    <li><strong>{{title}}</strong></li>
    <li  class="productId">{{id}}</li>
    <li>{{price}}</li>
    <li>{{description}}</li>
    <li>{{code}}</li>
    <li>{{category}}</li>
    <button type="button" class="btn-delete">Eliminar</button>
  </ul>
{{/each}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>